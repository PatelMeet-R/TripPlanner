<% if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-12 col-sm-10 col-md-8 col-lg-6 mx-auto shadow-lg rounded-3 p-4 position-relative"
  role="alert"
>
  <div class="d-flex justify-content-between align-items-center">
    <span class="fw-bold">Success!</span>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <p class="mb-0"><%= success %></p>
</div>
<% } %> <% if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-12 col-sm-10 col-md-8 col-lg-6 mx-auto shadow-lg rounded-3 p-4 position-relative"
  role="alert"
>
  <div class="d-flex justify-content-between align-items-center">
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <p class="mb-0"><%= error %></p>
</div>
<% } %>
